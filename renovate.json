{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "docker-compose": {
    "digest": {
      "enabled": true
    }
  },
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "digest": {
        "enabled": true
      }
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/usetrmnl/byos_laravel"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "commitMessagePrefix": "chore(deps):",
      "commitMessageAction": "update",
      "commitMessageTopic": "{{depName}} to {{newVersion}}",
      "commitMessageExtra": "",
      "labels": ["dependencies", "renovate", "automerge"],
      "postUpdateOptions": ["dockerComposeDigestUpdate"],
      "postUpgradeTasks": {}
    }
  ],
  "postUpdateOptions": [
    "dockerComposeDigestUpdate"
  ]
}

